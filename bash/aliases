if [ `uname` == "Darwin" ]; then
	alias ls='ls -G'
else
	alias ls='ls --color'
fi
alias gc='git commit -a -v'
alias gs='git status'
if [[ -f /usr/bin/mate ]]; then
		alias e='mate'
else
		alias e='vim'
fi
function reload () {
	source ~/.bashrc
}
alias macvlc='/Applications/VLC.app/Contents/MacOS/cvlc'
alias grep='grep -C 3 --color=auto'
alias less='less -r'
alias ff='find . -iname'